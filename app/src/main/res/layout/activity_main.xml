<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mback"
    tools:context="com.example.victor.quiescence.MainActivity">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:verticalSpacing="26dp"
        android:numColumns="auto_fit"
        android:id="@+id/gridview1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tab_menu" />
    <RadioGroup
        android:id="@+id/tab_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:id="@+id/rbChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.11"
            android:background="#44000000"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@android:drawable/btn_star"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:textColor="@color/colorQuite"
            android:text="About"  />

        <RadioButton
            android:id="@+id/rbAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.11"
            android:background="#44000000"
            android:button="@null"
            android:drawableTop="@android:drawable/ic_dialog_info"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="Help"
            android:textColor="@color/colorQuite"
            />

        <RadioButton
            android:id="@+id/rbg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.11"
            android:background="#44000000"
            android:button="@null"
            android:drawableTop="@android:drawable/ic_menu_compass"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="Setting"
            android:textColor="@color/colorQuite"
            />
    </RadioGroup>


</RelativeLayout>
